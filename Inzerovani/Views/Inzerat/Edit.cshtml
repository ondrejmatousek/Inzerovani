
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">
    <h2>Zadejte prosím parametry Inzerátu</h2>
</div>
<hr />

<div class="text-center">
    <h4>Zvolte kategorii</h4>
</div>
<hr />

<div class="text-center">
    <h4>Obecné</h4>
</div>
<form>

    <div class="form-group">
        <label for="inputNazev">Název</label>
        <input type="text" class="form-control" id="inputNazev" placeholder="např.Prodám osobní automobil">
    </div>
    <div class="form-group">
        <label for="inputPopis">Popis</label>
        <input type="text" class="form-control" id="inputPopis" placeholder="např. Škoda Octavia">
    </div>
    <div class="form-group">
        <label for="inputCena">Cena (Kč)</label>
        <input type="number" class="form-control" id="inputCena" placeholder="např. 100000">
    </div>
    <hr />

    <div class="text-center">
        <h4>Doprava</h4>
    </div>
    <div class="row">
        <div class="col-3">
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Osobní převzetí
                    </label>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Zaslání na adresu
                    </label>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-3">
            <div class="form-group">
                <label for="inputZip">Místo prodeje</label>
                <input type="text" class="form-control" id="inputZip">
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Vložit inzerát</button>
</form>
